{
  "name": "quiztopia",
  "version": "1.0.0",
  "description": "Serverless quiz application with AWS Lambda and DynamoDB - TypeScript",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "deploy": "npm run build && serverless deploy",
    "dev": "npm run build && serverless dev",
    "remove": "serverless remove",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@middy/core": "^5.4.7",
    "@middy/http-json-body-parser": "^5.4.7",
    "@middy/http-cors": "^5.4.7",
    "@middy/http-error-handler": "^5.4.7",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "@aws-sdk/client-dynamodb": "^3.665.0",
    "@aws-sdk/lib-dynamodb": "^3.665.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "serverless": "^4.4.0",
    "serverless-plugin-typescript": "^2.1.5",
